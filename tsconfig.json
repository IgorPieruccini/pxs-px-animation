{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "module": "es2015",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017", "es2019.Array", "ES2020.Promise"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts", "node_modules", "vendor", "public", "lib"]
}
